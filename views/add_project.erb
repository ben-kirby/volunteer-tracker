<div class="container">
  <div class="row">
    <div class="col">

      <form action="/add_project" method="post">
        <div class="input-group mb-3">
          <input type="text" name="title" class="form-control" placeholder="Project Title" aria-label="Recipient's username" aria-describedby="button-addon2">
          <div class="input-group-append">
            <button class="btn btn-outline-primary" type="submit" id="button-addon2">Add Project</button>
          </div>
        </div>
      </form>
    </div>

    <div class="col">
      <ul class="list-group list-group-flush">
      <% @projects.each do |project| %>
        <li class="list-group-item"><%= project.title %></li>
      <% end %>
      </ul>
    </div>
  </div>
</div>
