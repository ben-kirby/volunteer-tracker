<div class="container">
  <div class="row">
    <div class="col">

      <form action="/add_volunteer" method="post">
        <div class="input-group mb-3">
          <input type="text" name="name" class="form-control" placeholder="Volunteer's Name" aria-label="Recipient's username" aria-describedby="button-addon2">
          <div class="input-group-append">
            <button class="btn btn-outline-primary" type="submit" id="button-addon2">Add Volunteer</button>
          </div>
        </div>
      </form>
    </div>

    <div class="col">
      <ul class="list-group list-group-flush">
      <% @volunteers.each do |volunteer| %>
        <li class="list-group-item"><%= volunteer.name %></li>
      <% end %>
      </ul>
    </div>
  </div>
</div>
