<div class="container">
  <div class="row">
    <form class="" action="/manage_assignments" method="post">
      <h4>Change Assigments</h4>
      <div class="row">
        <div class="col">
          <div class="form-group">
            <label for="volunteer_name">Volunteer</label>
            <select id="volunteer_name" name="name" class="form-control">
              <%@volunteers.each do |volunteer|%>
              <option value=<%= volunteer.id %>><%= volunteer.name %></option>
              <%end%>
            </select>
          </div>
        </div>

        <div class="col">
          <div class="form-group">
            <label for="project_name">Project</label>
            <select id="project_name" name="project" class="form-control">
              <%@projects.each do |project|%>
              <option value=<%= project.id %>><%= project.title %></option>
              <%end%>
            </select>
          </div>
        </div>
      </div>
      <button class="btn btn-success" type="submit" name="button">Reassign!</button>
    </form>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
    <ul class="list-group list-group-flush">
      <% @volunteers.each do |volunteer| %>
      <li class="list-group-item">
        <%= volunteer.name %>,
        <% @projects.each do |project|%>
        <% if volunteer.project_id == project.id%>
        <%= project.title %>
        <% end %>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
