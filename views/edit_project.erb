<div class="container">
  <div class="row">
    <div class="col">
      <h4>Pick a project:</h4>
      <ul class="list-group list-group-flush">
        <% @projects.each do |project| %>
        <li class="list-group-item"><a href="/edit_project/<%= project.id %>"><%= project.title %></a></li>
        <% end %>
      </ul>
    </div>

    <div class="col">
      <% if @disp == 1%>
      <div class="card">
        <div class="card-body">
          <h4>Update <%=@project.title %></h4>
          <form action="/edit_project/<%= @project.id() %>" method="post">
            <input name="_method" type="hidden" value="patch">
            <div class="form-group">
              <input type="text" name="title" placeholder="New Title">
            </div>
            <button class="btn btn-primary" type="submit" name="button">Update</button>
          </form>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
